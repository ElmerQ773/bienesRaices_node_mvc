extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="font-extrabold text-center text-2xl")= pagina

    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
        p(class="py-5 px-5 rounded-lg w-full text-white font-bold uppercase text-center" class= error ? "bg-red-500" : "bg-green-500")=mensaje

        if !error
            a(href="/auth/login" class="text-center font-bold text-sm text-slate-600 hover:text-slate-400 mt-10 block") Ir a inicio de sesion