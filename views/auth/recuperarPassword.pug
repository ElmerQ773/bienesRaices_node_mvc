extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="font-extrabold text-center text-2xl")= pagina
        
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg 

        if mensajeInstrucciones
            div(class="max-w-md mx-auto my-10")
                    p(class="bg-green-400 text-white uppercase text-xs text-center p-3 mb-1 font-bold rounded-md")=mensaje 

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method= "POST" action="/auth/recuperarPassword") <!--esta clase en form añade especio en y al primer nivel de hijos-->
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Email De Registro
                        input(type="email" id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Email" name="email")

                    div(class="flex items-center justify-between") 
                        a(href="login" class="text-gray-500 text-xs") ¿Ya Tienes una Cuenta? Inicia Sesion
                        a(href="register" class="text-gray-500 text-xs") Crear una Cuenta

                    input(type="submit" value="Enviar Instrucciones" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer")              