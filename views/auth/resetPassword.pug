extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="font-extrabold text-center text-2xl")= pagina
        
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg 

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method= "POST") <!--esta clase en form aÃ±ade especio en y al primer nivel de hijos-->
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Coloca Tu nuevo password
                        input(type="password" id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu nuevo password" name="password")

                    input(type="submit" value="Guardar password" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer")              