extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="font-extrabold text-center text-2xl")= pagina

        if mensajeDeConfirmacion 
            div(class="max-w-md mx-auto my-10")
                    p(class="bg-green-400 text-white uppercase text-xs text-center p-3 mb-1 font-bold rounded-md") Tu Cuenta ha sido confirmada correctamente

        
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg 

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST") <!--esta clase en form a単ade especio en y al primer nivel de hijos-->
                    input(type="hidden" name="_csrf" value=csrfToken)  
                    div
                        label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Email De Registro
                        input(type="email" id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Email" name="email") 
                    
                    div
                        label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") contrase単a
                        input(type="password" id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu contrase単a" name="password") 

                    div(class="flex items-center justify-between") 
                        a(href="register" class="text-gray-500 text-xs") Crear una Cuenta
                        a(href="recuperarPassword" class="text-gray-500 text-xs") Olvide mi Contrase単a

                    input(type="submit" value="Iniciar Sesion" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer")              