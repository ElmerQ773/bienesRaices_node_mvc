extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)
block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="font-extrabold text-center text-2xl")= pagina

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(id="imagen" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}` class="space-y-8 dropzone border-dashed border-2 w-full min:h-96 rounded flex-col justify-center items-center")
                input(type="hidden" name="_csrf" value=csrfToken)
            
            button(id="publicar" type="button" class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer") Publicar Propiedad

block scripts 
    script(src="/js/agregarImagen.js")